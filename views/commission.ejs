<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <title>Anne's Accessory Box</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <section class="container commissions-form my-5 pt-5">
        <div class="container mt-3">
            <h1>Commissions</h1>
            <form action="/submit" method="POST">


                <div class="mb-4 mt-3">
                    <label for="request">Enter Commission Request</label>
                    <input type="text" class="form-control" id="type" placeholder="Enter Request" name="type" required>
                </div>

                <!-- Enter string length-->
                <div class="mb-3 mt-3">
                    <label for="stringlength">String Length (measured in CM)</label>
                    <input type="number" class="form-control" id="stringlength" placeholder="Enter desired string length" name="stringlength" required>
                </div>

                <!-- Bead selection catalogue for viewer to see-->
                <div class="container py-5">
                    <label for="bead-selection">Beads Catalogue</label>
                    <div class ="row row-cols-1 row-cols-md-3 g-4">
                        <% for (let i=0; i < beadsandaccessories.length; i++) { %>
                            <div class="col">
                                <div class="card" style="width: 22rem;">
                                    <img src="<%= beadsandaccessories[i].image %>" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <p class="class-text"><%= beadsandaccessories[i].description %></p>
                                        <p class="class-text price">Price: $<%= beadsandaccessories[i].price %></p>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            

                <!-- Quantity field where user can indicate the type of beads they want and the quantity-->
                <div class="mb-4 mt-3">
                    <div class="form-group">
                        <label for="selection">Bead and Charm selection:</label>
                        <textarea class="form-control" id="selection" rows="3" name="selection" required></textarea>
                    </div>
                </div>

                <!-- indicate name / username of user-->
                <div class="mb-4 mt-3">
                    <label for="name">Name</label>
                    <input type="name" class="form-control" id="name" placeholder="Enter Name" name="name" required>
                </div>

                <!-- Email to contact the user-->
                <div class="mb-4 mt-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter Email" name="email" required>
                </div>

                <div class="mb-4 mt-3">
                    <label for="instructions">Instructions to seller</label>
                    <input type="text" class="form-control" id="instructions" placeholder="Enter any additional instructions" name="instructions" required>
                </div>

                <!-- Submit button once user is done-->
                <div class="mb-3 mt-3">
                    <button type="submit" class="btn btn-primary btn-block">Submit Commission Request</button>
                </div>
        </div>
    </section>
    
</body>
</html>