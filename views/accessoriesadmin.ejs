    <br>
    <div class="container">
        <h1>Beads and Accessories Database</h1>
        <div class="container py-5">
          <div class ="row row-cols-1 row-cols-md-3 g-4">
              <% for (let i=0; i < beadsandaccessories.length; i++) { %>
                  <div class="col">
                      <div class="card" style="width: 22rem;">
                          <img src="<%= beadsandaccessories[i].image %>" class="card-img-top" alt="...">
                          <div class="card-body">
                              <p class="class-text"><%= beadsandaccessories[i].description %></p>
                              <p class="class-text price">Price: $<%= beadsandaccessories[i].price %></p>
                          </div>
                      </div>
                  </div>
              <% } %>
          </div>
      </div>

