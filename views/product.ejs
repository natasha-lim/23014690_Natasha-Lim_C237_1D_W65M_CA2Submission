<!-- product.ejs (save this for admin side to edit products) -->
 <!DOCTYPE html>
 <html lang="en">
 <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Anne's Accessory Box</title>
 </head>

 <body>
        <div class="container">
            <br>
            <div class="text-center"><h2>Product Details</h2></div>
            <br>
            <% if (product) { %> <!-- Check if product data exists -->
                <div>
                    <p><b>Product Name:</b><br> <%= product.name %></p>
                    <p><b>Product Image:</b><br> <img src = "<%= product.image %>" width="20%"></p>
                    <p><b>Product Category:</b><br> <%= product.category %></p>
                    <p><b>Description:</b><br> <%= product.description %></p>
                    <p><b>Price:</b><br> $<%= product.price.toFixed(2) %></p> 
                </div>
            <% } else { %>
                <p>No product found.</p>
            <% } %>
            <a href ="/products/admin">Back</a>
        </div>
        
    </section>
 </body>
 </html>