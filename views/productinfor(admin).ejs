<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <title>Anne's Accessory Box (Admin)</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/admin">Anne's Accessory Box (Admin)</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/products/admin">Products</a>
              </li> 
            </ul>

            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/accessories/admin">Beads and Pendants</a>
              </li>
            </ul>

            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/commissions/admin">Commission</a>
              </li>
            </ul>

            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/contact/admin">Contact</a>
              </li>
          </div>
        </div>
    </nav>

    <br>
    <h1>Products</h1>
    <br>
    <h3><a href="/addProduct/admin">+Add Product</a></h3>
    <section class="container product-overview my-5 pt-5">
        <div class="row product-row">
            <!-- Image appearance on product section of website (single image, no need to add multiple for now)-->
            <div class="col-lg-5 col-md-12 col-12 image-col">
                <% for (let i=0; i < products.length; i++) { %>
                    <div class="product-item">
                        <img src="images/<%= products[i].image %>" alt="product image" class="img-fluid" style="width: 300px; height: 300px;"> <!-- product image-->
                    </div>
                <% } %>
            </div>
    
            <!-- Product Description goes here-->
            <div class="col-lg-5 col-md-12 col-12 image-col" >
                <% for (let i=0; i < products.length; i++) { %>
                    <div class="product-item">
                        <h2><a href="/product/<%= products[i].productId %>"><%= products[i].name %></a></h2> 
                        <h4 class="mt-2.5">Product Details</h4> 
                        <p><%= products[i].description %></p>
                        <div class="price-edit-container">
                            <p>Price: $<%= products[i].price %></p>
                            <button class="button"><a href="/editProduct/<%= products[i].productId %>">Edit</a></button>
                            <button class="button"><a href="/deleteProduct/<%= products[i].productId%>">Delete</a></button>
                        </div>
                    </div>
                <% } %>
            </div>
        </div> 

</body>
</html>