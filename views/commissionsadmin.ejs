<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/admin">Anne's Accessory Box (Admin)</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/products/admin">Products</a>
              </li> 
            </ul>

            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/accessories/admin">Beads and Pendants</a>
              </li>
            </ul>

            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/commissions/admin">Commission</a>
              </li>
            </ul>

            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/contact/admin">Contact</a>
              </li>
          </div>
        </div>
    </nav>

    <br>
    <div class="container">
        <h1>Commissions Database</h1>
        <br>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Commission ID</th>
                    <th scope="col">Commission Type</th>
                    <th scope="col">String Length</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Selection</th>
                    <th scope="col">Instructions</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < commissions.length; i++) { %>
                    <tr>
                        <td><%= commissions[i].commissionId %></td>
                        <td><%= commissions[i].type %></td>
                        <td><%= commissions[i].stringlength %></td>
                        <td><%= commissions[i].name %></td>
                        <td><%= commissions[i].email %></td>
                        <td><%= commissions[i].selection %></td>
                        <td><%= commissions[i].instructions %></td>
                        <td>
                            <a href="/deleteCommission/<%= commissions[i].commissionId %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>